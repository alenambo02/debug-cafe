const addtoOthers = async (event) => {
    event.preventDefault();

    const id = document.querySelector('#orderID').value.trim();
    const email = document.querySelector('#user-email').value.trim();
    const item = document.querySelector('#item').value.trim();

    /*
    const item_name = document.querySelector('#item_name').value.trim();
    const item_description = document.querySelector('#item_description').value.trim();
    const price = document.querySelector('#price').value.trim();
    */
  
    if (id && email) {
      const response = await fetch(`/api/cart`, {
        method: 'POST',
        body: JSON.stringify(
          { 
            id,
            email,
            item,
         }),
        headers: {
          'Content-Type': 'application/json',
        },
      });
  
      if (response.ok) {
        document.location.replace('/');
      } else {
        alert('Failed to confirm order, please try again.');
      }
    }
}

